CXXFLAGS += -O3 -DNDEBUG -g -std=c++14 -Wno-deprecated-declarations -Isrc -I @mathinc@
CPPFLAGS += @amcppflags@

UNAME_S=$(shell uname -s)

ifeq ($(UNAME_S),Darwin)
	CXXFLAGS += -mmacosx-version-min=10.7 -stdlib=libc++
else
	CXXFLAGS += -include src/common/memcpyLink.h -Wl,--wrap=memcpy
	CFLAGS += -include src/common/memcpyLink.h
endif

SOURCE_1=src/yeet/yeet_main.cpp

all : wfmash

wfmash : src/yeet/* src/yeet/*/* src/align/* src/align/*/* src/common/* src/common/*/*
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(SOURCE_1) -o wfmash @mathlib@ -lstdc++ -lz -lm -lpthread 

install : wfmash
	mkdir -p @prefix@/bin/
	cp `pwd`/wfmash @prefix@/bin/

clean :
	-rm -f wfmash
