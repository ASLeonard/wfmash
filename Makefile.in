CXXFLAGS += -O3 -DNDEBUG -g -std=c++14 -Wno-deprecated-declarations -Isrc -I @mathinc@
CPPFLAGS += @amcppflags@

UNAME_S=$(shell uname -s)

ifeq ($(UNAME_S),Darwin)
	CXXFLAGS += -mmacosx-version-min=10.7 -stdlib=libc++
else
	CXXFLAGS += -include src/common/memcpyLink.h -Wl,--wrap=memcpy
	CFLAGS += -include src/common/memcpyLink.h
endif

SOURCE_1=src/yeet/yeet_main.cpp

all : edyeet

src/common/wflign/build/lib/libwflign.a : src/common/wflign/* src/common/wflign/src/*cpp src/common/wflign/src/*hpp
	cd src/common/wflign && cmake -H. -Bbuild && cd build && $(MAKE)

edyeet : src/yeet/* src/yeet/*/* src/align/* src/align/*/* src/common/* src/common/*/* src/common/wflign/build/lib/libwflign.a
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) -Lsrc/common/wflign/build/lib/ $(SOURCE_1) -o edyeet @mathlib@ -lstdc++ -lz -lm -lpthread -lwflign

install : edyeet
	mkdir -p @prefix@/bin/
	cp `pwd`/edyeet @prefix@/bin/

clean :
	-rm -f edyeet
